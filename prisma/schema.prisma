// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Token {
  id Int @id @default(autoincrement())
  // 合约地址
  ca String @unique
  // 第1个查询人的名称
  firstCaller String
  // 查询次数
  queryNum Int
  // 群数量
  groupNum Int
  // 首次查询时价格
  firstPrice String
  firstFdv String
  createAt DateTime
  updateAt DateTime
}

model Record {
  id Int @id @default(autoincrement())// 合约地址
  ca String
  // 查询人
  queryUser String
  // 查询来源群
  groupName String
  price String
  // 查询时的市值
  fdv String
  createAt DateTime
  updateAt DateTime
}